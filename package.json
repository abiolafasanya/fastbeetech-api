{
  "name": "hexonest-api",
  "version": "1.0.0",
  "description": "Hexonest API",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "seed:roles": "npm run build && node dist/common/seeds/seedRoles.js",
    "seed:roles:simple": "node seedRolesSimple.js",
    "build": "tsc",
    "start": "node dist/index.js",
    "gen:secret-access": "sh -c 'echo \"JWT_SECRET=$(openssl rand -base64 32)\" >> .env && echo \"Access token appended to .env file\"'",
    "gen:secret-refresh": "sh -c 'echo \"JWT_REFRESH_SECRET=$(openssl rand -base64 32)\" >> .env && echo \"Refresh token appended to .env file\"'",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Abiola Fasanya",
  "license": "ISC",
  "dependencies": {
    "@colors/colors": "^1.6.0",
    "@mongodb-js/saslprep": "^1.3.0",
    "@react-email/components": "^0.3.1",
    "@react-email/render": "^1.1.3",
    "axios": "^1.11.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "bson": "^6.10.4",
    "cloudinary": "^2.7.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.0",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "express-mongo-sanitize": "^2.2.0",
    "fn.name": "^1.1.0",
    "glob": "^11.0.3",
    "helmet": "^8.1.0",
    "is-stream": "^4.0.1",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.16.3",
    "morgan": "^1.10.0",
    "multer": "^2.0.1",
    "nodemailer": "^7.0.5",
    "react": "^19.1.0",
    "react-email": "^4.1.3",
    "readable-stream": "^4.7.0",
    "resend": "^6.0.2",
    "rimraf": "^6.0.1",
    "winston": "^3.17.0",
    "zod": "^4.0.15"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
